{{#if updateFormShowing}}
  <form class="updateArticleForm">
    <div class="form-group">
      <label for="title">Article Title</label>
      {{input value=title id="title" placeholder=article.title}}
    </div>
    <div class="form-group">
      <label for="author">Author</label>
      {{input value=author id="author" placeholder=article.author}}
    </div>
    <div class="form-group">
      <label for="category">Category</label>
      {{input value=category id="category" placeholder=article.category}}
    </div>
    <div class="form-group">
      <label for="image">Image URL</label>
      {{input value=image id="image" placeholder=article.image}}
    </div>
    <div class="form-group">
      <label for="body">Body</label>
      {{input value=body id="body" placeholder=article.body}}
    </div>
    <button {{action 'updateFormSubmit'}}>Update Article</button>
  </form>
  <button {{action 'updateForm'}}>Cancel</button>
  {{else}}
  <button {{action 'updateForm'}}>Update Article</button>
{{/if}}
